<assembly>
	<id>${envClassifier}${obfuscate.si}_complete</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>**/hbase-log4j.properties</exclude>
					<exclude>**/trace-log4j.properties</exclude>
				</excludes>
			</unpackOptions>
			<includes>
				<include>org.apache.derby:derby</include>
				<include>org.apache.derby:derbynet</include>
				<include>org.apache.derby:derbyclient</include>
				<include>org.apache.derby:derbytools</include>
				<include>org.apache.derby:derbyrun</include>
				<include>org.datanucleus:datanucleus-core</include>
				<include>com.splicemachine:structured_si</include>
				<include>com.splicemachine:structured_constants</include>
				<include>com.splicemachine:splice_protocol</include>
				<include>com.splicemachine:splice_machine</include>
				<include>net.sf.opencsv:opencsv</include>
				<include>com.google.code.gson:gson</include>
				<include>net.sf.ehcache:ehcache-core</include>
				<include>com.esotericsoftware.kryo:kryo</include>
				<include>com.carrotsearch:hppc</include>
				<include>org.apache.lucene:lucene-core</include>
				<include>de.javakaffee:kryo-serializers</include>
                <include>com.lmax:disruptor</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>lib/native</directory>
			<includes>
				<include>*/**</include>
			</includes>
			<outputDirectory>/lib/native</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>/</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<excludes>
				<exclude>**/hbase-log4j.properties</exclude>
				<exclude>**/trace-log4j.properties</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>

