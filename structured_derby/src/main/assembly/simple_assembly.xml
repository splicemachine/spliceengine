<!-- = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = =
Assembly descriptor for our demo/stand-alone package.

Creates a single TAR file with everything necessary to run splice.  Currently
makes a 1 master + 1 region-server cluster available.

TAR structure:

   splicemachine/
       lib/
       bin/
       demodata/
= = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = =  -->
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>${envClassifier}${obfuscate.si}_simple</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<!-- DEPENDENCIES: includes these artifacts from the pom. -->
	<dependencySets>
		<dependencySet>
			<outputDirectory>splicemachine/lib</outputDirectory>
			<scope>runtime</scope>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>

	<!-- MISC FILES -->
	<fileSets>

		<!-- Our module's jar -->
		<fileSet>
			<directory>target</directory>
			<outputDirectory>splicemachine/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*complete.jar</exclude>
			</excludes>
		</fileSet>

		<!-- SCRIPTS -->
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>splicemachine/bin</outputDirectory>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
			<includes>
				<include>*sh</include>
			</includes>
		</fileSet>

		<!-- DOCS -->
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>splicemachine</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>License.txt</include>
				<include>README</include>
			</includes>
		</fileSet>

		<!-- DEMO DATA -->
		<fileSet>
			<directory>src/test/test-data/demo/demodata</directory>
			<outputDirectory>splicemachine/demodata</outputDirectory>
			<fileMode>0666</fileMode>
			<directoryMode>0755</directoryMode>
			<excludes>
				<exclude>**/*.gz</exclude>
			</excludes>
		</fileSet>

		<!-- DEMO DATA *.GZ: Copy binary files in separate fileSet -->
		<fileSet>
			<directory>src/test/test-data/demo/demodata/data</directory>
			<outputDirectory>splicemachine/demodata/data</outputDirectory>
			<lineEnding>keep</lineEnding>
			<fileMode>0775</fileMode>
			<includes>
				<include>**/*.gz</include>
			</includes>
		</fileSet>

		<!-- CONFIG: for some reason we currently put it in lib/ -->
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>splicemachine/lib</outputDirectory>
			<includes>
				<include>info-log4j.properties</include>
				<include>hbase-log4j.properties</include>
				<include>splice-site.xml</include>
			</includes>
		</fileSet>

		<!-- splice_web project -->
		<fileSet>
			<directory>../splice_web/target</directory>
			<outputDirectory>splicemachine/lib</outputDirectory>
			<includes>
				<include>*.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../splice_web/target/dependency</directory>
			<outputDirectory>splicemachine/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*complete.jar</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>../splice_web/target/classes/bin</directory>
			<outputDirectory>splicemachine/bin</outputDirectory>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
			<includes>
				<include>*sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../splice_web/target/classes/etc</directory>
			<outputDirectory>splicemachine/etc</outputDirectory>
			<includes>
				<include>*xml</include>
			</includes>
		</fileSet>

	</fileSets>
</assembly>
