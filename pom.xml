			<dependency> <groupId>com.splicemachine</groupId> <artifactId>utilities</artifactId> <version>1.1.1</version> </dependency>
			<dependency> <groupId>org.apache.derby</groupId> <artifactId>derby</artifactId> <version>${derby.version}</version> </dependency>
			<dependency> <groupId>org.apache.derby</groupId> <artifactId>derbyclient</artifactId> <version>${derby.version}</version> </dependency>
