			<dependency> <groupId>ant-contrib</groupId> <artifactId>ant-contrib</artifactId> <version>1.0b3</version> <exclusions> <exclusion> <groupId>ant</groupId> <artifactId>ant</artifactId> </exclusion> </exclusions> </dependency>
			<dependency> <groupId>com.carrotsearch</groupId> <artifactId>hppc</artifactId> <version>0.5.2</version> </dependency>
			<dependency> <groupId>com.carrotsearch</groupId> <artifactId>java-sizeof</artifactId> <version>0.0.4</version> <exclusions> <exclusion> <groupId>com.carrotsearch</groupId> <artifactId>junit-benchmarks</artifactId> </exclusion> <exclusion> <groupId>junit</groupId> <artifactId>junit</artifactId> </exclusion> </exclusions> </dependency>
