<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<!-- =============================================================== -->
<!-- Configure the Jetty Server for the Splice Admin Console Server. -->
<!--                                                                 -->
<!-- Documentation of this file format can be found at:              -->
<!-- http://wiki.eclipse.org/Jetty/Reference/jetty.xml_syntax        -->
<!-- =============================================================== -->

<Configure id="Server" class="org.eclipse.jetty.server.Server">

	<!-- =========================================================== -->
	<!-- Primary JDBC Connection for Splice Admin Console            -->
	<!-- =========================================================== -->
	<New class="org.eclipse.jetty.plus.jndi.EnvEntry">
			<Arg></Arg>
			<Arg>driver</Arg>
			<Arg type="java.lang.String">org.apache.derby.jdbc.ClientDriver</Arg>
			<Arg type="boolean">true</Arg>
	</New>
	<New class="org.eclipse.jetty.plus.jndi.EnvEntry">
			<Arg></Arg>
			<Arg>host</Arg>
			<Arg type="java.lang.String">localhost</Arg>
			<Arg type="boolean">true</Arg>
	</New>
	<New class="org.eclipse.jetty.plus.jndi.EnvEntry">
			<Arg></Arg>
			<Arg>port</Arg>
			<Arg type="java.lang.String">1527</Arg>
			<Arg type="boolean">true</Arg>
	</New>
	<New class="org.eclipse.jetty.plus.jndi.EnvEntry">
			<Arg></Arg>
			<Arg>user</Arg>
			<Arg type="java.lang.String">splice</Arg>
			<Arg type="boolean">true</Arg>
	</New>
	<New class="org.eclipse.jetty.plus.jndi.EnvEntry">
			<Arg></Arg>
			<Arg>password</Arg>
			<Arg type="java.lang.String">admin</Arg>
			<Arg type="boolean">true</Arg>
	</New>

</Configure>
